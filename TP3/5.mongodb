db.ventas.aggregate([
  {
    $lookup: {
      from: "productos",
      localField: "producto_id",
      foreignField: "_id",
      as: "producto_info"
    }
  },
  {
    $unwind: "$producto_info"
  },
  {
    $project: {
      categoria: "$producto_info.categoria"
    }
  },
  {
    $group: {
      _id: "$categoria",
      total_vendido: { $sum: 1 }
    }
  }
]);
